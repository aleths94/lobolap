<h1>Lista de Colaboradores</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Matricula</th>
      <th>Carrera</th>
      <th>Statu</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @collaborators.each do |collaborator| %>
      <tr>
        <td><%= collaborator.nombre %></td>
        <td><%= collaborator.apellidos %></td>
        <td><%= collaborator.matricula %></td>
        <td><%= collaborator.carrera %></td>
        <td><%= collaborator.statu %></td>
        <td><%= link_to 'Ver', collaborator %></td>
        <td><%= link_to 'Editar', edit_collaborator_path(collaborator) %></td>
        <td><%= link_to 'Eliminar', collaborator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar nuevo colaborador', new_collaborator_path %>
